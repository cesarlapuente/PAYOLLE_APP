<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mod_feed.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/info_scroll"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/header"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_gravity="top"
            android:id="@+id/layout_header">

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/btn_return"
                android:background="@drawable/btn_return"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
            />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:id="@+id/poi_title"
                android:text="@string/mod_discover__game"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="true">
            </TextView>

            <ImageButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/boton_accueil"
                android:id="@+id/btn_home"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="4">
            <Space
                android:layout_width="match_parent"
                android:layout_height="65dp"/>
            <TextView
                android:id="@+id/poi_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="14"
                android:text="@string/mod_discover__txt_info"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="#FFFFFF"/>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:paddingBottom="15dp"
                android:id="@+id/scrollView_game"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"
                android:fadeScrollbars="false"
                android:visibility="visible">
                <!--android:layout_marginBottom="64dp"-->
            </ListView>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:text="DECOUVERTE"
        android:background="@drawable/barra_titulo"
        android:layout_marginTop="69dp"
        android:layout_marginLeft="85dp"
        android:layout_marginStart="85dp"
        android:paddingLeft="55dp"
        android:paddingStart="55dp"
        android:paddingRight="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#668811"
        android:gravity="center|right"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icono_decouverte"
        android:adjustViewBounds="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="30dp"/>

